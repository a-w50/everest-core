{
    "description": "This modules provides Smart Charging",
    "provides": {
        "main": {
            "interface": "solar_manager",
            "description": "This is the pid_controller interface of the module SolarManager, it provides config options",
            "config": {
                    "pid_setpoint": {
                        "description": "Setpoint of the PID-Controller",
                        "type": "number"
                    },
                    "pid_p_weight": {
                        "description": "Weight of proportional term",
                        "type": "number",
                        "minimum": 0
                    },
                    "pid_i_weight": {
                        "description": "Weight of integral term",
                        "type": "number",
                        "minimum": 0
                    },
                    "pid_d_weight": {
                        "description": "Weight of derivative term",
                        "type": "number",
                        "minimum": 0
                    },
                    "pid_output_interval": {
                        "description": "Output interval in milliseconds",
                        "type": "integer",
                        "minimum": 0
                    },
                    "pid_i_limit": {
                        "description": "Limit of integral term",
                        "type": "number"
                    },
                    "pid_min_output": {
                        "description": "Minimum of output power in watts",
                        "type": "number"
                    },
                    "pid_max_output": {
                        "description": "Maximum of output power in watts",
                        "type": "number"
                    }
            }
        }
    },
    "requires": {
        "gridpowermeter": {
            "interface": "powermeter"
        },
        "chargingdriver": {
            "interface": "evse_manager"
        },
        "chargingdriverpowermeter": {
            "interface": "powermeter"
        }
    },
    "enable_external_mqtt": true,
	"metadata": {
		"license": "https://opensource.org/licenses/Apache-2.0",
		"authors": ["Andreas Heinrich", "Lars Dieckmann"]
    }
}